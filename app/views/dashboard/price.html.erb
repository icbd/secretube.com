<%= render 'dashboard/header' %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">
    <%= t('price') %>
  </h1>
<!--  <p class="lead">description</p>-->
</div>

<div class="container" id="price_container">
  <div class="card-deck mb-3 text-center">

    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal"><%= t('.try') %></h4>
      </div>
      <div class="card-body">
        <h1 class="card-title pricing-card-title"> $0.99 <small class="text-muted">/ 1 <%= t('.day') %></small></h1>
        <ul class="list-unstyled mt-3 mb-4 description">
          <li><%= t('.try_line1') %></li>
          <li><%= t('.try_line2') %></li>
        </ul>
        <button type="button" class="btn btn-lg btn-block btn-outline-primary"><%= t('get_started') %></button>
      </div>
    </div>


    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal"><%= t('.efficient') %></h4>
      </div>
      <div class="card-body">
        <h1 class="card-title pricing-card-title"> $2.99 <small class="text-muted">/ 1 <%= t('.month') %></small></h1>
        <ul class="list-unstyled mt-3 mb-4 description">
          <li><%= t('.efficient_line1') %></li>
          <li><%= t('.efficient_line2') %></li>
        </ul>
        <button type="button" class="btn btn-lg btn-block btn-primary"><%= t('get_started') %></button>
      </div>
    </div>


    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal"><%= t('.enterprise') %></h4>
      </div>
      <div class="card-body">
        <h1 class="card-title pricing-card-title"> $5.99 <small class="text-muted">/ 1 <%= t('.month') %></small></h1>
        <ul class="list-unstyled mt-3 mb-4 description">
          <li><%= t('.enterprise_line1') %></li>
          <li><%= t('.enterprise_line2') %></li>
        </ul>
        <button type="button" class="btn btn-lg btn-block btn-outline-primary"><%= t('get_started') %></button>
      </div>
    </div>


  </div>
</div>

<script>
    $("#header .price").addClass('text-high-light');
</script>
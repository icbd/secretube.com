<div class="container">
  <div class="row">

    <%= form_for(@user, as: :user, url: users_path, method: :post, html: {class: "col form-signin align-self-center"}) do |f| %>

      <div class="icon-logo text-center mb-4"><%= image_tag "logo.png", width: 72 %></div>

      <%= render "shared/flash" %>

      <%= f.text_field :email, required: "required", autofocus: "autofocus", class: "form-control", placeholder: "Email" %>
      <%= f.password_field :password, required: "required", class: "form-control", placeholder: t("password") %>
      <%= f.password_field :password_confirmation, required: "required", class: "form-control", placeholder: t("password_confirmation") %>

      <%= f.submit t("register"), class: "btn btn-lg btn-primary btn-block mt-4 mb-2" %>

      <p class="text-center">&copy; 2019</p>
    <% end %>

  </div>
</div>